@{
    ViewBag.Title = "CercaSpedizione";
}

<h2>CercaSpedizione</h2>

@using (Html.BeginForm("DettagliSpedizione", "Home", FormMethod.Post))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <div class="form-group">
            @Html.Label("NumeroSpedizione", new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.TextBox("NumeroSpedizione", null, new { @class = "form-control" })
                @Html.ValidationMessage("NumeroSpedizione", "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="button" id="cerca" value="Cerca" class="btn btn-primary my-3" />
            </div>
        </div>
    </div>
}

<div class="partialView">

</div>

@section scripts {
    <script>
        $(document).ready(function () {
            $("#cerca").click(function () {
                var numeroSpedizione = $("#NumeroSpedizione").val();
                $(".partialView").load("DettagliSpedizione?NumeroSpedizione=" + numeroSpedizione);
            })

        })
    </script>
}
